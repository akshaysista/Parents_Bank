            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>

            <td>
                
                @Html.ActionLink("Details", "Details", new {id = item.Id})
                
