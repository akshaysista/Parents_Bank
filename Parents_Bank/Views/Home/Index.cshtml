@{
    ViewBag.Title = "Home Page";
}

<div>
    <div id="parentBankCar" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#parentBankCar" data-slide-to="0" class="active"></li>
            <li data-target="#parentBankCar" data-slide-to="1"></li>
            <li data-target="#parentBankCar" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/parent_child.jpg" style="height:500px;width:100%">
            </div>

            <div class="item">
                <img src="~/Content/ParentChildSilhouette.jpg" style="height:500px;width:100%" >
            </div>

            <div class="item">
                <img src="~/Content/parent_child2.jpg" style="height:500px;width:100%">
            </div>
        </div>
        <a class="left carousel-control" href="#parentBankCar" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#parentBankCar" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="jumbotron">
        <div class="link col-lg-6"><a href="~/BankAccounts/Index" class="glyphicon glyphicon-log-in" style="margin-right:10px"></a>@Html.ActionLink("Log In to your Account", "Index", "BankAccounts")</div>
        <div class="link col-lg-6"><a href="~/BankAccounts/Index" class="glyphicon glyphicon-usd" style="margin-right:10px"></a>@Html.ActionLink("Learn More About Financial Resources", "FinancialResource", "Home")</div>

    </div>
</div>
